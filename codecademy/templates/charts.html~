{% block content %}
		<div id="container" style="width:100%; height:400px;"></div><br/><br/><br/><br/>	
		<div id="containerBar" style="width:100%; height:400px;"></div>

	<script>
		var chart;
		var hist = '{{datas}}'.split(" ");
		var pontos = {{Pontos}};
		var nome = '{{Nome}}';
			$(document).ready(function() {
				chart = new Highcharts.Chart({
					chart: {
						renderTo: 'container', 
						defaultSeriesType: 'line'
					},
					title: {
					text: 'Desenpenho no tempo',
					x: -20 //center
				    },
				    xAxis: {
					categories: hist
				    },
				    yAxis: {
					title: {
					    text: 'Pontuação'
					},
					plotLines: [{
					    value: 0,
					    width: 1,
					    color: '#808080'
					}]
				    },
				    tooltip: {
					valueSuffix: ' Pts'
				    },
				    legend: {
					layout: 'vertical',
					align: 'right',
					verticalAlign: 'middle',
					borderWidth: 0
				    },
				});
				chart.addSeries({
					name: nome,
					data: pontos
					});
			});


			
		
		</script>

		<script>
			var chart2;
			var Dados = [{{Melhor}}, {{Hoje}}, {{Dias_seg}}, {{Total}}];
			$(document).ready(function() {
				chart2 = new Highcharts.Chart({
				    chart: {
					renderTo: 'containerBar',
					type: 'column'
				    },
				    title: {
					text: 'Pontuação'
				    },
				    xAxis: {
					categories: [
					    'Melhor Pontuação',
					    'Hoje',
					    'Dias Seguidos',
					    'Total'
					]
				    },
				    yAxis: {
					min: 0,
					title: {
					    text: 'Rainfall (mm)'
					}
				    },
				    tooltip: {
					valueSuffix: ' Pts'
				    },
				    plotOptions: {
					column: {
					    pointPadding: 0.2,
					    borderWidth: 0
					}
				    },
				    series: [{
					data: Dados
    
            				}]
				});
			    });
		
		</script>
{% endblock %}


